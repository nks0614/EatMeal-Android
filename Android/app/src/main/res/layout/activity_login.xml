<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.MainActivity">

    <data>
        <variable
            name="viewModel"
            type="com.project.eatmeal.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="144dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/idEdit"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.8"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radius"
                    android:layout_margin="16dp"
                    android:padding="8dp"
                    android:paddingStart="16dp"
                    android:paddingBottom="16dp"
                    tools:text="fhrmdls"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <EditText
                    android:id="@+id/pwEdit"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.8"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_radius"
                    android:layout_margin="16dp"
                    android:padding="8dp"
                    android:paddingStart="16dp"
                    android:paddingBottom="16dp"
                    tools:text="fhrmdls"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    app:layout_constraintTop_toBottomOf="@id/idEdit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <CheckBox
                    android:id="@+id/autoLoginCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/pwEdit"
                    app:layout_constraintStart_toStartOf="@id/pwEdit"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/autoLoginCheckBox"
                    app:layout_constraintStart_toEndOf="@id/autoLoginCheckBox"
                    app:layout_constraintBottom_toBottomOf="@id/autoLoginCheckBox"
                    android:text="자동 로그인"/>

                <TextView
                    android:id="@+id/signUpBtn"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.38"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/button_radius"
                    app:layout_constraintTop_toBottomOf="@id/autoLoginCheckBox"
                    app:layout_constraintStart_toStartOf="@id/pwEdit"
                    />

                <TextView
                    android:id="@+id/loginBtn"
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.38"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/button_radius"
                    app:layout_constraintTop_toBottomOf="@id/autoLoginCheckBox"
                    app:layout_constraintEnd_toEndOf="@id/pwEdit"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>